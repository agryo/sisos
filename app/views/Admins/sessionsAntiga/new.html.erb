

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
  <h2>Entrar</h2>
  <%= f.email_field :email, :autofocus => true, :placeholder=>"Email" , :class=>"input-block-level input-xlarge"  %></div>
  
  <div><%= f.password_field :password, :placeholder=>"Senha" , :class=>"input-block-level input-xlarge"%></div>

 

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
